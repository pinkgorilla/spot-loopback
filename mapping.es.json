{
    "settings": {
        "analysis": {
            "filter": {
                "address_stop": {
                    "type": "stop",
                    "ignore_case": true,
                    "stopwords": [
                        "jl",
                        "jalan",
                        "lt",
                        "lantai",
                        "gg",
                        "gang"
                    ]
                },
                "address_ngram": {
                    "type": "nGram",
                    "min_gram": 3,
                    "max_gram": 10
                }
            },
            "analyzer": {
                "address_analyzer": {
                    "type": "custom",
                    "tokenizer": "standard",
                    "char_filter": [
                        "html_strip"
                    ],
                    "filter": [
                        "lowercase",
                        "asciifolding",
                        "word_delimiter",
                        "address_stop",
                        "address_ngram"
                    ]
                }
            }
        }
    },
    "mappings": {
        "Unit-Location": { 
            "properties": {
                "unit": {
                    "type": "string"
                },
                "description": {
                    "type": "string"
                },
                "address": {
                    "type": "string",
                    "analyzer": "address_analyzer"
                },
                "phones": {
                    "type": "string"
                },
                "images": {
                    "type": "string",
                    "index": "no"
                },
                "geolocation": {
                    "properties": {
                        "lat": {
                            "type": "double"
                        },
                        "lng": {
                            "type": "double"
                        }
                    }
                },
                "tags": {
                    "type": "string"
                },
                "unitId": {
                    "type": "string",
                    "index": "no"
                },
                "locationId": {
                    "type": "string",
                    "index": "no"
                },
                "_active": {
                    "type": "boolean",
                    "index": "no"
                },
                "_deleted": {
                    "type": "boolean",
                    "index": "no"
                },
                "_createAgent": {
                    "type": "string",
                    "index": "no"
                },
                "_createdBy": {
                    "type": "string",
                    "index": "no"
                },
                "_createdDate": {
                    "type": "date",
                    "format": "strict_date_optional_time||epoch_millis",
                    "index": "no"
                },
                "_updateAgent": {
                    "type": "string",
                    "index": "no"
                },
                "_updatedBy": {
                    "type": "string",
                    "index": "no"
                },
                "_updatedDate": {
                    "type": "date",
                    "format": "strict_date_optional_time||epoch_millis",
                    "index": "no"
                }
            }
        }  
    }
}
